extends layout

block content
  h1= title
    br
    a.btn.btn-primary(href="/expeditions/create") Create expeditions 
    br
    - let items = results;
      //- var results = [
      //-   { name: "Everest Base Camp", destination: "Nepal", duration: 14 },
      //-   { name: "Amazon Rainforest", destination: "Brazil", duration: 10 },
      //-   { name: "Antarctic Voyage", destination: "Antarctica", duration: 21 }
      //- ];

  div(class="container-fluid")
    div(class="row m-1")
      each item in items
        - let destination = `dispatch(\"/expeditions/update?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") 
          | Item #{item.expeditions_type}(#{item.size}) is #{item.cost}
          //- button.btn(class="btn-primary ml-1", onclick= destination) Update
          .col-sm-4
            h3 #{item.cost}
            p Destination: #{item.size}
            p Duration: #{item.expeditions_Type} days
            div(class="buy-button", onclick=`buy(${index})`) Purchase
            button.btn(class="btn-primary ml-1", onclick= destination) Update
            button.btn.btn-success.ml-1(onclick=destinationdetail) Detail
            button.btn.btn-warning.ml-1(onclick=destinationdelete) Delete
            br

  br
  a(href='/') Go Back to Home

  script.
    function buy(index) {
      alert('You purchased item ' + index);
    }

  script.
    function dispatch(path){
      window.location.href=path 
    }
